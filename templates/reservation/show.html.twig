{% extends 'base.html.twig' %}

{% block title %}Réservation N°{{ reservation.id }}{% endblock %}

{% block body %}
    <table class="table table-hover text-center">
        <thead>
        <tr>
            <th scope="col">Réservation N°</th>
            <th scope="col">Nom de l'évènement</th>
            <th scope="col">Nom et prénom</th>
            <th scope="col">Email</th>
            <th scope="col">Date de la réservation</th>
            <th scope="col">Supprimer la réservation</th>
        </tr>
        </thead>
        <tbody>
            <tr>
                <th scope="row">{{ reservation.id }}</th>
                <td>{{ reservation.event.name }}</td>
                <td>{{ reservation.participant.name }} {{ reservation.participant.firstName }} </td>
                <td>{{ reservation.participant.email }}</td>
                <td>{{ reservation.date|date("d/m/Y") }}</td>
                <td>
                    <button type="button" class="btn btn-danger" data-toggle="modal"
                            data-target="#deleteReservationConfModal" >X</button>

                    {% include 'modal/deleteConfModal.html.twig' %}

                </td>
            </tr>
        </tbody>
    </table>
{% endblock %}
